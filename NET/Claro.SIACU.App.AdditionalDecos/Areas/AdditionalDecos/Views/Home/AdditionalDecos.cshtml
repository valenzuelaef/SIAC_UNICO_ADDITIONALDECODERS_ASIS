<style>
    .bg-container {
        background-repeat: no-repeat;
        background-position: bottom left;
        min-height: 450px;
    }

    .span-equipment {
        font-weight: bold;
        font-size: 12px;
        color: #000000;
        border: 1px solid #ddd !important;
        padding: 10px;
        background: #FFFFFF;
    }
    .span-equipmenttxt {
        font-weight: bold;
        font-size: 12px;
        color: #000000;
    }
</style>

<div id="divAdditionalDecos" class="bg-container">

    <div class="row">
        <div class="customer-data-title">
            <div class="customer-data-title-items customer-data-title-icon">
                <span class="new-service-core-icon"></span>
            </div>
            <div class="customer-data-title-items customer-data-title-label">
                <span>GESTIÓN DE PUNTOS DE TV ADICIONALES</span>
            </div>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-borderless">
            <tbody id="tbodyEquipment">
            </tbody>
        </table>
    </div>

    <div class="row" style="position:absolute; bottom:0;">
        <div class="col-sm-2 check-text text-right">
            <span id="MaxDecos" class="span-equipment">0</span>
        </div>
        <div class="col-sm-4 check-text text-left">
            <span class="span-equipmenttxt">NRO. DE DECOS MAXIMOS</span>
        </div>
        <div class="col-sm-2 check-text text-right">
            <span id="DisDecos" class="span-equipment" style="background:#F3F3F3;">0</span>
        </div>
        <div class="col-sm-4 check-text text-left">
            <span class="span-equipmenttxt">DECO DISPONIBLE</span>
        </div>
    </div>
</div>
@Scripts.Render("~/bundles/Content/Lib/BloqueoF12")
